{
  "name": "reedable",
  "version": "1.2.2",
  "description": "Reedable Chrome Extension",
  "private": true,
  "directories": {
    "test": "src"
  },
  "scripts": {
    "clean": "npx rimraf reports target && npx mkdirp reports target",
    "copy": "npm run copy-src",
    "compile": "npm run compile-lessc",
    "bundle": "npm run bundle-webpack",
    "build": "npm run copy && npm run compile && npm run bundle",
    "package": "npm run clean && npm run build && ./tools/release/package.sh",
    "release": "./tools/release/release.sh",
    "report": "npm run report-complexity && npm run report-coverage",
    "export": "npm run export-macos",
    "test": "npx jest",
    "-- Keep the rest of the scripts sorted in alphabetical order --": "",
    "bundle-webpack": "npx webpack --config tools/bundle/*.config.js",
    "compile-lessc": "npx lessc target/popup/popup.less target/popup/popup.css",
    "copy-src": "npx copyup 'src/**/*' target",
    "export-macos": "xcrun safari-web-extension-converter ./unpacked --project-location ./workspace --app-name Reedable --bundle-identifier io.github.reedable.Reedable.macos --swift",
    "report-complexity": "npx es6-plato -r -e ./eslintrc.yaml -d ./dist/reports/complexity src",
    "report-coverage": "npx jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reedable/Reedable.git"
  },
  "keywords": [
    "accessibility",
    "Chrome",
    "extension"
  ],
  "author": "Abraham Reed",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/reedable/Reedable/issues"
  },
  "homepage": "https://reedable.github.io/Reedable/",
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@jest/globals": "^27.2.1",
    "copyfiles": "^2.4.1",
    "es6-plato": "^1.2.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "jest": "^27.2.1",
    "less": "^4.1.2",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "webpack": "^5.56.1",
    "webpack-cli": "^4.8.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "<rootDir>/dist/reports/coverage/"
  }
}
